{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="{% if section.settings.page_width %}page-width{% endif %} section-{{ section.id }}-padding text-{{ section.settings.vertical_alignment }}  ">
  <div class="grid-gap flex flex-col md:flex-row ">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'image' %}
          <div class="w-1/2">
            {% assign image = block.settings.image %}
            {% if image %}
              {% assign image_class = 'w-full h-full object-cover' %}
              {% if settings.corners == 'rounded' %}
                {% assign image_class = image_class | append: ' rounded-md' %}
              {% endif %}
              {{ image | image_url: width: image.width | image_tag: class: image_class }}
            {% else %}
              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
            {% endif %}
          </div>
        {% when 'text' %}
          <div
            class="
              flex
              flex-col
              {{ section.settings.content_position }}
              color-{{ section.settings.color_scheme }}

              grid-gap
              p-4 w-1/2
            "
          >
            <h2 class="{{ block.settings.heading_size }}">{{ block.settings.heading }}</h2>
            <div class="rte {{ block.settings.sub_heading_size }}">{{ block.settings.sub_heading }}</div>
            <div>
              <a href="{{ block.settings.button_url }}" class="button button-primary">{{ block.settings.button }}</a>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Image and text",
  "settings": [
    {
      "type": "checkbox",
      "id": "page_width",
      "label": "Page Width",
      "default": true
    },

    {
      "type": "select",
      "id": "content_position",
      "label": "Content position",
      "options": [
        {
          "value": "justify-start",
          "label": "Top"
        },
        {
          "value": "justify-center",
          "label": "Middle"
        },
        {
          "value": "justify-end",
          "label": "Bottom"
        }
      ],
      "default": "justify-center"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 25,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 25,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "color_scheme",
      "label": "Color Scheme",
      "id": "color_scheme",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",

      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",

      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "Image and text"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading Size",
          "options": [
            {
              "value": "h3",
              "label": "Small"
            },
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h1",
              "label": "Large"
            }
          ],
          "default": "h2"
        },
        {
          "type": "richtext",
          "id": "sub_heading",
          "label": "Sub heading",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "select",
          "id": "sub_heading_size",
          "label": "Sub Heading Size",
          "options": [
            {
              "value": "p",
              "label": "Small"
            },
            {
              "value": "h4",
              "label": "Medium"
            },
            {
              "value": "h3",
              "label": "Large"
            }
          ],
          "default": "h4"
        },
        {
          "type": "text",
          "id": "button",
          "label": "Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image and text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
